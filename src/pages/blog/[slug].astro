---
import { getCollection, type CollectionEntry } from 'astro:content';
import MainLayout from '@layouts/MainLayout.astro';
import Card from '@components/ui/Card.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}
---

<MainLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  type="article"
>
  <!-- Article Header -->
  <article>
    <header class="bg-gradient-to-br from-white via-gray-50 to-gray-100 py-16">
      <div class="container mx-auto max-w-4xl">
        <!-- Breadcrumb -->
        <nav class="text-sm text-gray-600 mb-6">
          <a href="/" class="hover:text-burgundy">Strona główna</a>
          <span class="mx-2">/</span>
          <a href="/blog" class="hover:text-burgundy">Blog</a>
          <span class="mx-2">/</span>
          <span class="text-gray-950">{post.data.title}</span>
        </nav>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-4">
          {post.data.tags.map((tag) => (
            <span class="px-3 py-1 bg-burgundy-light text-burgundy text-sm font-medium rounded-full">
              {tag}
            </span>
          ))}
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-heading font-semibold text-gray-950 mb-6">
          {post.data.title}
        </h1>

        <!-- Meta -->
        <div class="flex items-center space-x-6 text-gray-600">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{post.data.author}</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={post.data.pubDate.toISOString()}>
              {formatDate(post.data.pubDate)}
            </time>
          </div>
        </div>
      </div>
    </header>

    <!-- Article Content -->
    <section class="section">
      <div class="container mx-auto max-w-4xl">
        <div class="prose prose-lg max-w-none prose-headings:font-heading prose-headings:text-gray-950 prose-p:text-gray-700 prose-a:text-burgundy prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-950 prose-ul:text-gray-700 prose-ol:text-gray-700 prose-blockquote:border-burgundy prose-blockquote:text-gray-700">
          <Content />
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-gray-50">
      <div class="container mx-auto max-w-4xl">
        <Card variant="default" padding="lg" class="text-center">
          <h2 class="text-3xl font-heading font-semibold text-gray-950 mb-4">
            Potrzebujesz pomocy prawnej?
          </h2>
          <p class="text-gray-600 mb-6">
            Skontaktuj się z nami, aby uzyskać profesjonalną poradę prawną dopasowaną do Twojej sytuacji.
          </p>
          <a
            href="/kontakt"
            class="inline-flex items-center px-8 py-4 bg-burgundy text-white text-lg font-semibold rounded-lg hover:bg-burgundy-dark transition-all duration-150 hover:shadow-lg hover:-translate-y-0.5"
          >
            Umów konsultację
          </a>
        </Card>
      </div>
    </section>

    <!-- Back to Blog -->
    <section class="py-8">
      <div class="container mx-auto max-w-4xl">
        <a
          href="/blog"
          class="inline-flex items-center text-burgundy hover:underline"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Wróć do bloga
        </a>
      </div>
    </section>
  </article>
</MainLayout>
