---
import Layout from "../layouts/Layout.astro";
import { Mail, Phone, MapPin } from "lucide-react";
---

<Layout title="Kontakt | Adwokat Anna Romańska-Krysa" activeTab="contact">
    <div class="px-6 md:px-12 pt-12 md:pt-24 pb-20 animate-fade-in">
        <div class="max-w-4xl mb-16">
            <span
                class="block text-ochre font-sans text-xs uppercase tracking-[0.3em] mb-4 animate-on-scroll"
                >Kontakt</span
            >
            <h1
                class="font-display text-[10vw] md:text-[7vw] leading-[0.9] text-text uppercase animate-on-scroll delay-100"
            >
                Rozpocznijmy <br />
                <span class="italic text-ochre">Rozmowę</span>
            </h1>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-32 border-t border-text/10 pt-16"
        >
            {/* Contact Details */}
            <div class="space-y-16 animate-on-scroll">
                <div class="group">
                    <span
                        className="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-text/40 mb-2 group-hover:text-ochre transition-colors"
                    >
                        <Mail className="w-4 h-4" /> Email
                    </span>
                    <a
                        href="mailto:kontakt@adwokat-romanska.pl"
                        class="text-2xl md:text-4xl font-display text-text hover:text-ochre transition-all"
                    >
                        kontakt@<br />adwokat-romanska.pl
                    </a>
                </div>

                <div class="group">
                    <span
                        className="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-text/40 mb-2 group-hover:text-ochre transition-colors"
                    >
                        <Phone className="w-4 h-4" /> Telefon
                    </span>
                    <a
                        href="tel:+48123456789"
                        class="text-2xl md:text-4xl font-display text-text hover:text-ochre transition-all"
                    >
                        +48 123 456 789
                    </a>
                </div>

                <div class="group">
                    <span
                        className="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-text/40 mb-2 group-hover:text-ochre transition-colors"
                    >
                        <MapPin className="w-4 h-4" /> Lokalizacja
                    </span>
                    <p class="text-xl md:text-2xl font-display text-text">
                        ul. Mariacka XX/Y <br /> 40-000 Katowice
                    </p>
                    <div class="mt-4 pt-4 border-t border-text/10">
                        <p class="text-sm font-sans text-text/60">
                            Kancelaria usytuowana w centrum miasta.<br />
                            Dostępne parkingi w strefie kultury (5 min pieszo).
                        </p>
                    </div>
                </div>
            </div>

            {/* Form or Map Placeholder */}
            <div
                class="bg-white p-8 md:p-12 shadow-2xl shadow-gray-200/50 animate-on-scroll delay-200"
            >
                <h3 class="font-display text-2xl mb-8">Napisz wiadomość</h3>
                <form class="space-y-6">
                    <div>
                        <label
                            class="block text-xs font-bold uppercase tracking-widest mb-2 text-text/60"
                            >Imię i Nazwisko</label
                        >
                        <input
                            type="text"
                            class="w-full bg-cream border-b border-text/20 p-3 focus:outline-none focus:border-ochre transition-colors"
                        />
                    </div>
                    <div>
                        <label
                            class="block text-xs font-bold uppercase tracking-widest mb-2 text-text/60"
                            >Email</label
                        >
                        <input
                            type="email"
                            class="w-full bg-cream border-b border-text/20 p-3 focus:outline-none focus:border-ochre transition-colors"
                        />
                    </div>
                    <div>
                        <label
                            class="block text-xs font-bold uppercase tracking-widest mb-2 text-text/60"
                            >Wiadomość</label
                        >
                        <textarea
                            rows="4"
                            class="w-full bg-cream border-b border-text/20 p-3 focus:outline-none focus:border-ochre transition-colors"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-text text-cream py-4 uppercase font-bold tracking-widest text-xs hover:bg-ochre transition-colors mt-4"
                    >
                        Wyślij
                    </button>
                </form>
            </div>
        </div>
    </div>
</Layout>
