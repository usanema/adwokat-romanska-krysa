---
import Layout from "../layouts/Layout.astro";
import { Mail, Phone, MapPin } from "lucide-react";
---

<Layout title="Kontakt | Adwokat Anna Romańska-Krysa" activeTab="contact">
    <div class="px-6 md:px-12 pt-12 md:pt-24 pb-20 animate-fade-in">
        <div class="max-w-4xl mb-16">
            <span
                class="block text-primary font-sans text-xs uppercase tracking-[0.3em] mb-4 animate-on-scroll"
                >Kontakt</span
            >
            <h1
                class="font-display text-[10vw] md:text-[7vw] leading-[0.9] text-text uppercase animate-on-scroll delay-100"
            >
                Rozpocznijmy <br />
                <span class="italic text-primary">Rozmowę</span>
            </h1>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-32 border-t border-text/10 pt-16"
        >
            {/* Contact Details */}
            <div class="space-y-16 animate-on-scroll">
                <div class="group">
                    <span
                        className="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-text/40 mb-2 group-hover:text-primary transition-colors"
                    >
                        <Mail className="w-4 h-4" /> Email
                    </span>
                    <a
                        href="mailto:kontakt@adwokat-romanska.pl"
                        class="text-2xl md:text-4xl font-display text-text hover:text-primary transition-all"
                    >
                        kontakt@<br />adwokat-romanska.pl
                    </a>
                </div>

                <div class="group">
                    <span
                        className="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-text/40 mb-2 group-hover:text-primary transition-colors"
                    >
                        <Phone className="w-4 h-4" /> Telefon
                    </span>
                    <a
                        href="tel:+48123456789"
                        class="text-2xl md:text-4xl font-display text-text hover:text-primary transition-all"
                    >
                        +48 123 456 789
                    </a>
                </div>

                <div class="group">
                    <span
                        className="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-text/40 mb-2 group-hover:text-primary transition-colors"
                    >
                        <MapPin className="w-4 h-4" /> Lokalizacja
                    </span>
                    <p class="text-xl md:text-2xl font-display text-text">
                        ul. Mariacka XX/Y <br /> 40-000 Katowice
                    </p>
                    <div class="mt-4 pt-4 border-t border-text/10">
                        <p class="text-sm font-sans text-text/60">
                            Kancelaria usytuowana w centrum miasta.<br />
                            Dostępne parkingi w strefie kultury (5 min pieszo).
                        </p>
                    </div>
                </div>
            </div>

            {/* Custom Styled Map */}
            <div
                class="relative h-[600px] w-full bg-[#E5E3DF] overflow-hidden animate-on-scroll delay-200 shadow-2xl shadow-gray-200/50"
            >
                {/* Map Overlay for Custom Color Tone (Beige/Sepia) */}
                <div
                    class="absolute inset-0 pointer-events-none z-10 mix-blend-multiply bg-[#F0EFEB] opacity-40"
                >
                </div>

                {/* Google Map Iframe with Filters */}
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2551.0!2d19.0!3d50.2!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4716ce3685a73229%3A0x6a0a9c6870530!2sMariacka%2C%20Katowice!5e0!3m2!1spl!2spl!4v1700000000000!5m2!1spl!2spl"
                    width="100%"
                    height="100%"
                    style="border:0; filter: grayscale(100%) contrast(1.1) brightness(0.95);"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>

                {/* Custom Marker (Overlay) */}
                <div
                    class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-full z-20 pointer-events-none"
                >
                    <div class="bg-[#1E1E1E] text-white p-4 shadow-xl">
                        <span
                            class="block font-display font-medium text-lg leading-none uppercase tracking-wide"
                        >
                            Romańska-Krysa
                        </span>
                        <span
                            class="block font-sans text-[10px] uppercase tracking-[0.2em] text-white/70 mt-1"
                        >
                            Kancelaria Adwokacka
                        </span>
                    </div>
                    {/* Triangle pointer */}
                    <div
                        class="w-0 h-0 border-l-[10px] border-l-transparent border-t-[10px] border-t-[#1E1E1E] border-r-[10px] border-r-transparent mx-auto"
                    >
                    </div>
                </div>

                {/* Zoom Controls Mockup (Visual only, to match style) */}
                <div
                    class="absolute bottom-8 right-8 z-20 flex flex-col gap-2 bg-white p-1 shadow-lg"
                >
                    <button
                        class="w-8 h-8 flex items-center justify-center hover:bg-gray-100 text-text text-xl font-light"
                        >+</button
                    >
                    <div class="h-[1px] bg-gray-200 w-full"></div>
                    <button
                        class="w-8 h-8 flex items-center justify-center hover:bg-gray-100 text-text text-xl font-light"
                        >−</button
                    >
                </div>
            </div>
        </div>
    </div>
</Layout>
