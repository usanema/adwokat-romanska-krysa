---
import MainLayout from '@layouts/MainLayout.astro';
import Card from '@components/ui/Card.astro';
import team from '@data/team.json';
---

<MainLayout
  title="Zespół"
  description="Poznaj zespół Kancelarii Adwokackiej Romańska Krysa. Doświadczeni prawnicy specjalizujący się w różnych dziedzinach prawa."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-white via-gray-50 to-gray-100 py-20">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-heading font-semibold text-gray-950 mb-6">
        Nasz Zespół
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Poznaj doświadczonych prawników, którzy z pasją i zaangażowaniem pomagają naszym klientom
      </p>
    </div>
  </section>

  <!-- Team Grid -->
  <section class="section">
    <div class="container mx-auto">
      <div class="space-y-16">
        {team.map((member, index) => (
          <div class={`grid grid-cols-1 lg:grid-cols-5 gap-12 items-start ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <!-- Photo -->
            <div class={`lg:col-span-2 ${index % 2 === 1 ? 'lg:col-start-4' : ''}`}>
              <Card variant="default" padding="md">
                {member.image ? (
                  <img
                    src={member.image}
                    alt={member.name}
                    class="w-full aspect-square object-cover rounded-lg filter grayscale hover:grayscale-0 transition-all duration-300"
                  />
                ) : (
                  <div class="w-full aspect-square bg-gray-200 rounded-lg flex items-center justify-center">
                    <span class="text-8xl text-gray-400 font-heading">
                      {member.name.charAt(0)}
                    </span>
                  </div>
                )}
              </Card>
            </div>

            <!-- Bio -->
            <div class={`lg:col-span-3 ${index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''}`}>
              <div class="sticky top-24">
                <h2 class="text-3xl font-heading font-semibold text-gray-950 mb-2">
                  {member.name}
                </h2>
                <p class="text-lg text-burgundy mb-4">{member.title}</p>

                <!-- Specializations -->
                <div class="mb-6">
                  <h3 class="text-sm font-semibold text-gray-950 uppercase tracking-wide mb-3">
                    Specjalizacje
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    {member.specializations.map((spec) => (
                      <span class="px-3 py-1 bg-burgundy-light text-burgundy text-sm font-medium rounded-full">
                        {spec}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- Bio -->
                <div class="prose prose-lg text-gray-700 mb-6">
                  <p>{member.bio}</p>
                </div>

                <!-- Contact Info -->
                <Card variant="flat" padding="md">
                  <h3 class="text-sm font-semibold text-gray-950 uppercase tracking-wide mb-3">
                    Kontakt
                  </h3>
                  <div class="space-y-2">
                    <div class="flex items-center space-x-3">
                      <svg class="w-5 h-5 text-burgundy" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <a href={`mailto:${member.email}`} class="text-gray-700 hover:text-burgundy transition-colors">
                        {member.email}
                      </a>
                    </div>
                    <div class="flex items-center space-x-3">
                      <svg class="w-5 h-5 text-burgundy" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      <a href={`tel:${member.phone}`} class="text-gray-700 hover:text-burgundy transition-colors">
                        {member.phone}
                      </a>
                    </div>
                  </div>
                </Card>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gray-50">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-heading font-semibold text-gray-950 mb-6">
        Chcesz umówić spotkanie?
      </h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Skontaktuj się z nami, aby umówić konsultację z wybranym prawnikiem
      </p>
      <a
        href="/kontakt"
        class="inline-flex items-center px-8 py-4 bg-burgundy text-white text-lg font-semibold rounded-lg hover:bg-burgundy-dark transition-all duration-150 hover:shadow-lg hover:-translate-y-0.5"
      >
        Skontaktuj się
      </a>
    </div>
  </section>
</MainLayout>
