---
import Layout from "../layouts/Layout.astro";
import { specializations } from "../data";
import ServiceDetail from "../components/ServiceDetail";
import { ArrowUpRight } from "lucide-react";
---

<Layout
    title="Specjalizacje | Adwokat Anna Romańska-Krysa"
    activeTab="services"
>
    <div
        class="px-6 md:px-12 pt-12 md:pt-24 pb-20 animate-fade-in bg-cream min-h-screen"
    >
        {/* Page Header */}
        <div class="max-w-4xl mb-24 md:mb-32">
            <span
                class="block text-ochre font-sans text-xs uppercase tracking-[0.3em] mb-4"
                data-animate="fade">Obszary Praktyki</span
            >
            <h1
                class="font-display text-[11vw] md:text-[7vw] leading-[0.9] text-text uppercase"
                data-animate="split"
                data-split-type="chars"
            >
                Ekspertyza <br />
                <span class="italic text-text/60">& Obszary</span>
            </h1>
        </div>

        {/* Services List - Staggered Grid Container */}
        <div class="max-w-7xl mx-auto">
            {
                specializations.map((spec, index) => (
                    <ServiceDetail spec={spec} index={index} client:visible />
                ))
            }
        </div>

        {/* CTA Bottom */}
        <div
            class="mt-20 py-20 border-t border-text/10 text-center"
            data-animate="fade"
        >
            <h3 class="text-3xl font-display font-light mb-8">
                Niestandardowa sprawa?
            </h3>
            <p class="text-text/60 font-sans mb-8 max-w-lg mx-auto">
                Każda sprawa jest inna. Jeśli nie widzisz powyżej kategorii
                pasującej do Twojego problemu - skontaktuj się ze mną.
            </p>
            <a
                href="/contact"
                class="inline-flex items-center gap-3 text-sm font-bold uppercase tracking-widest border border-text px-8 py-4 hover:bg-ochre hover:border-ochre hover:text-cream transition-colors"
            >
                Umów Konsultację <ArrowUpRight className="w-4 h-4" />
            </a>
        </div>
    </div>
</Layout>
