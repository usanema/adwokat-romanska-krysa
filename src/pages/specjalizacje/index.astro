---
import { getCollection } from 'astro:content';
import MainLayout from '@layouts/MainLayout.astro';
import SpecializationCard from '@components/ui/SpecializationCard.astro';

const specializations = (await getCollection('specializations')).sort(
  (a, b) => a.data.order - b.data.order
);
---

<MainLayout
  title="Specjalizacje"
  description="Poznaj specjalizacje Kancelarii Adwokackiej Romańska Krysa. Oferujemy kompleksową pomoc prawną w różnych dziedzinach prawa."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-white via-gray-50 to-gray-100 py-20">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-heading font-semibold text-gray-950 mb-6">
        Nasze Specjalizacje
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Oferujemy kompleksową pomoc prawną w różnych dziedzinach prawa. Wybierz obszar, który Cię interesuje.
      </p>
    </div>
  </section>

  <!-- Specializations Grid -->
  <section class="section">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {specializations.map((spec) => (
          <SpecializationCard
            title={spec.data.title}
            description={spec.data.description}
            icon={spec.data.icon}
            href={`/specjalizacje/${spec.slug}`}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gray-50">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-heading font-semibold text-gray-950 mb-6">
        Nie możesz znaleźć odpowiedzi?
      </h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Skontaktuj się z nami, a pomożemy Ci znaleźć rozwiązanie Twojego problemu prawnego
      </p>
      <a
        href="/kontakt"
        class="inline-flex items-center px-8 py-4 bg-burgundy text-white text-lg font-semibold rounded-lg hover:bg-burgundy-dark transition-all duration-150 hover:shadow-lg hover:-translate-y-0.5"
      >
        Skontaktuj się
      </a>
    </div>
  </section>
</MainLayout>
