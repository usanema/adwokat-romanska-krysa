---
import { getCollection, type CollectionEntry } from 'astro:content';
import MainLayout from '@layouts/MainLayout.astro';
import Card from '@components/ui/Card.astro';
import Icon from '@components/ui/Icon.astro';
import Button from '@components/ui/Button.astro';

export async function getStaticPaths() {
  const specializations = await getCollection('specializations');
  return specializations.map((spec) => ({
    params: { slug: spec.slug },
    props: { spec },
  }));
}

type Props = {
  spec: CollectionEntry<'specializations'>;
};

const { spec } = Astro.props;
const { Content } = await spec.render();
---

<MainLayout
  title={spec.data.title}
  description={spec.data.metaDescription}
  type="article"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-white via-gray-50 to-gray-100 py-16">
    <div class="container mx-auto">
      <!-- Breadcrumb -->
      <nav class="text-sm text-gray-600 mb-6">
        <a href="/" class="hover:text-burgundy">Strona główna</a>
        <span class="mx-2">/</span>
        <a href="/specjalizacje" class="hover:text-burgundy">Specjalizacje</a>
        <span class="mx-2">/</span>
        <span class="text-gray-950">{spec.data.title}</span>
      </nav>

      <div class="flex items-center space-x-4 mb-6">
        <div class="w-16 h-16 bg-burgundy-light text-burgundy rounded-xl flex items-center justify-center">
          <Icon name={spec.data.icon} size="xl" />
        </div>
        <div>
          <h1 class="text-4xl md:text-5xl font-heading font-semibold text-gray-950">
            {spec.data.title}
          </h1>
        </div>
      </div>

      <p class="text-xl text-gray-600 max-w-3xl">
        {spec.data.description}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <article class="prose prose-lg max-w-none prose-headings:font-heading prose-headings:text-gray-950 prose-p:text-gray-700 prose-a:text-burgundy prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-950 prose-ul:text-gray-700">
            <Content />
          </article>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- CTA Card -->
            <Card variant="default" padding="lg" class="bg-burgundy text-white">
              <h3 class="text-2xl font-heading font-semibold mb-4">
                Potrzebujesz pomocy?
              </h3>
              <p class="text-white/90 mb-6">
                Skontaktuj się z nami już dziś. Pierwsza konsultacja jest bezpłatna.
              </p>
              <a
                href="/kontakt"
                class="block text-center px-6 py-3 bg-white text-burgundy font-semibold rounded-lg hover:bg-gray-50 transition-colors"
              >
                Umów konsultację
              </a>
            </Card>

            <!-- Contact Info -->
            <Card variant="flat" padding="md">
              <h4 class="font-semibold text-gray-950 mb-4">Skontaktuj się bezpośrednio</h4>
              <div class="space-y-3">
                <a href="tel:+48123456789" class="flex items-center space-x-3 text-gray-700 hover:text-burgundy transition-colors">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span>+48 123 456 789</span>
                </a>
                <a href="mailto:kontakt@adwokat-rk.pl" class="flex items-center space-x-3 text-gray-700 hover:text-burgundy transition-colors">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span>kontakt@adwokat-rk.pl</span>
                </a>
              </div>
            </Card>

            <!-- Other Specializations -->
            <Card variant="flat" padding="md">
              <h4 class="font-semibold text-gray-950 mb-4">Inne specjalizacje</h4>
              <ul class="space-y-2">
                {(await getCollection('specializations'))
                  .filter((s) => s.slug !== spec.slug)
                  .sort((a, b) => a.data.order - b.data.order)
                  .map((s) => (
                    <li>
                      <a
                        href={`/specjalizacje/${s.slug}`}
                        class="text-gray-700 hover:text-burgundy transition-colors flex items-center space-x-2"
                      >
                        <Icon name={s.data.icon} size="sm" class="text-burgundy" />
                        <span>{s.data.title}</span>
                      </a>
                    </li>
                  ))}
              </ul>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
