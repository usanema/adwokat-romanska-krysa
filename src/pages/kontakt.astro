---
import MainLayout from '@layouts/MainLayout.astro';
import ContactForm from '@components/react/ContactForm';
import Card from '@components/ui/Card.astro';
import siteConfig from '@data/site-config.json';
---

<MainLayout
  title="Kontakt"
  description="Skontaktuj się z Kancelarią Adwokacką Romańska Krysa. Jesteśmy do Twojej dyspozycji. Pierwsza konsultacja bezpłatna."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-white via-gray-50 to-gray-100 py-20">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-heading font-semibold text-gray-950 mb-6">
        Skontaktuj się z nami
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Jesteśmy tutaj, aby pomóc. Napisz lub zadzwoń - odpowiemy najszybciej jak to możliwe.
      </p>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="section">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
        <!-- Left Column: Contact Info -->
        <div class="lg:col-span-2 space-y-8">
          <div>
            <h2 class="text-3xl font-heading font-semibold text-gray-950 mb-6">
              Dane kontaktowe
            </h2>

            <!-- Address -->
            <div class="space-y-6">
              <Card variant="flat" padding="md">
                <div class="flex items-start space-x-4">
                  <svg class="w-6 h-6 text-burgundy mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div>
                    <h3 class="font-semibold text-gray-950 mb-1">Adres</h3>
                    <p class="text-gray-600">
                      {siteConfig.contact.address.street}<br />
                      {siteConfig.contact.address.postalCode} {siteConfig.contact.address.city}
                    </p>
                  </div>
                </div>
              </Card>

              <!-- Phone -->
              <Card variant="flat" padding="md">
                <div class="flex items-start space-x-4">
                  <svg class="w-6 h-6 text-burgundy mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <div>
                    <h3 class="font-semibold text-gray-950 mb-1">Telefon</h3>
                    <a href={`tel:${siteConfig.contact.phone}`} class="text-burgundy hover:underline">
                      {siteConfig.contact.phone}
                    </a>
                  </div>
                </div>
              </Card>

              <!-- Email -->
              <Card variant="flat" padding="md">
                <div class="flex items-start space-x-4">
                  <svg class="w-6 h-6 text-burgundy mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <div>
                    <h3 class="font-semibold text-gray-950 mb-1">Email</h3>
                    <a href={`mailto:${siteConfig.contact.email}`} class="text-burgundy hover:underline">
                      {siteConfig.contact.email}
                    </a>
                  </div>
                </div>
              </Card>

              <!-- Hours -->
              <Card variant="flat" padding="md">
                <div class="flex items-start space-x-4">
                  <svg class="w-6 h-6 text-burgundy mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div>
                    <h3 class="font-semibold text-gray-950 mb-1">Godziny otwarcia</h3>
                    <p class="text-gray-600">
                      {siteConfig.contact.hours.weekdays}<br />
                      {siteConfig.contact.hours.weekend}
                    </p>
                  </div>
                </div>
              </Card>
            </div>
          </div>
        </div>

        <!-- Right Column: Contact Form -->
        <div class="lg:col-span-3">
          <Card variant="default" padding="lg">
            <h2 class="text-3xl font-heading font-semibold text-gray-950 mb-6">
              Formularz kontaktowy
            </h2>
            <p class="text-gray-600 mb-8">
              Wypełnij poniższy formularz, a my skontaktujemy się z Tobą w ciągu 24 godzin.
            </p>
            <ContactForm client:visible />
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (Optional) -->
  <section class="section bg-gray-50">
    <div class="container mx-auto">
      <div class="aspect-w-16 aspect-h-9 rounded-xl overflow-hidden shadow-lg">
        <!-- Here you would embed Google Maps iframe -->
        <div class="w-full h-96 bg-gray-200 flex items-center justify-center">
          <p class="text-gray-500">Mapa - Google Maps Embed</p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
