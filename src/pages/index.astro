<style>
  /* HERO */
  .hero {
    min-height: 85vh; /* Taller hero as per premium feel */
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,0.03);
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xxl);
    align-items: center;
  }
  
  .hero-text h1 {
    font-size: 3.8rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }
  
  .hero-text .lead {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    max-width: 90%;
  }

  .image-placeholder {
    width: 100%;
    aspect-ratio: 0.8; /* Portrait ratio */
    background-color: #E6E6DC; /* Be≈ºowo-szary placeholder */
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: 1.5rem;
  }

  /* VALUES */
  .values {
    padding: var(--spacing-xxl) 0;
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }
  
  .value-item {
    text-align: center;
  }
  
  .icon-circle {
    width: 60px;
    height: 60px;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin: 0 auto 1.5rem;
  }

  /* SPECIALIZATIONS */
  .specializations {
    padding: var(--spacing-xxl) 0;
    background-color: var(--color-white);
  }
  
  .specs-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 columns on large screens */
    gap: var(--spacing-lg);
  }
  
  .spec-card {
    display: block;
    padding: 2rem;
    background-color: var(--color-bg);
    border: 1px solid transparent;
    transition: all 0.3s ease;
    text-decoration: none;
    height: 100%;
  }
  
  .spec-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }
  
  .spec-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 1rem;
  }
  
  .spec-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .spec-card ul {
    list-style: none;
    padding: 0;
    margin-bottom: 1.5rem;
    color: var(--color-text-light);
    font-size: 0.9rem;
  }
  
  .spec-card li {
    margin-bottom: 0.5rem;
  }
  
  .btn-link {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-primary);
    letter-spacing: 0.05em;
  }

  /* REVIEWS */
  .bg-accent-light {
    background-color: #F5F5F0; /* Slightly different shade */
  }
  
  .reviews {
    padding: var(--spacing-xxl) 0;
  }
  
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }
  
  .review-card {
    background: var(--color-white);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
  }
  
  .stars {
    margin-bottom: 1rem;
    color: #D4AF37; /* Gold */
  }
  
  .review-card p {
    font-style: italic;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }
  
  .author {
    font-weight: 700;
    font-family: var(--font-heading);
    color: var(--color-primary);
  }

  /* PROCESS */
  .process {
    padding: var(--spacing-xxl) 0;
  }
  
  .process-steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    text-align: center;
  }
  
  .step-num {
    display: block;
    font-size: 4rem;
    font-family: var(--font-heading);
    color: rgba(30, 57, 42, 0.1); /* Very light primary */
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 1024px) {
    .specs-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 900px) {
    .hero-content { grid-template-columns: 1fr; text-align: center; }
    .hero-text { order: 2; }
    .hero-image { order: 1; margin-bottom: 2rem; }
    .hero-text h1 { font-size: 2.5rem; }
    
    .values-grid, .reviews-grid, .process-steps { grid-template-columns: 1fr; }
  }
</style>
