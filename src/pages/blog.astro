---
import Layout from "../layouts/Layout.astro";
import { posts } from "../data";
import { ArrowUpRight } from "lucide-react";
---

<Layout title="Blog | Adwokat Anna RomaÅ„ska-Krysa" activeTab="blog">
    <div
        class="px-6 md:px-12 pt-12 md:pt-24 pb-20 animate-fade-in min-h-screen"
    >
        <div className="max-w-4xl mb-24">
            <span
                class="block text-ochre font-sans text-xs uppercase tracking-[0.3em] mb-4 animate-on-scroll"
                >Journal</span
            >
            <h1
                class="font-display text-[10vw] md:text-[6vw] leading-[0.9] text-text uppercase animate-on-scroll delay-100"
            >
                Wiedza jest <br />
                <span class="italic text-ochre">Kluczem</span>
            </h1>
        </div>

        <div class="grid grid-cols-1 gap-0 border-t border-text/20">
            {
                posts.map((post, index) => (
                    <article
                        class={`group relative py-12 border-b border-text/20 transition-colors hover:bg-white/50 animate-on-scroll delay-${
                            (index * 100) % 300
                        }`}
                    >
                        <div class="grid grid-cols-1 md:grid-cols-12 gap-8 items-center">
                            <div class="md:col-span-2">
                                <span class="text-xs font-mono opacity-50 block mb-2">
                                    {post.date}
                                </span>
                                <span class="text-xs font-bold uppercase tracking-wider text-ochre">
                                    {post.category}
                                </span>
                            </div>

                            <div class="md:col-span-6">
                                <h2 class="text-3xl md:text-4xl font-display font-light text-text mb-4 group-hover:text-ochre transition-colors">
                                    <a
                                        href={`/blog/${post.id}`}
                                        class="before:absolute before:inset-0 block"
                                    >
                                        {post.title}
                                    </a>
                                </h2>
                                <p class="text-sm font-sans text-text/60 line-clamp-2 md:hidden">
                                    {post.excerpt}
                                </p>
                            </div>

                            <div class="md:col-span-3 hidden md:block">
                                <p class="text-sm font-sans text-text/60 line-clamp-2">
                                    {post.excerpt}
                                </p>
                            </div>

                            <div class="md:col-span-1 flex justify-end">
                                <div class="w-10 h-10 border border-text/20 rounded-full flex items-center justify-center group-hover:bg-ochre group-hover:border-ochre group-hover:text-cream transition-all">
                                    <ArrowUpRight className="w-5 h-5 transition-transform group-hover:rotate-45" />
                                </div>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</Layout>
