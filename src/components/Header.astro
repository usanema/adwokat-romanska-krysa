<style>
  .header {
    padding: 1.5rem 0;
    background-color: var(--color-bg);
    border-bottom: 1px solid rgba(30, 57, 42, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  /* Logo */
  .logo {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    white-space: nowrap;
  }
  
  /* Nav */
  .nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }
  
  .nav-list a {
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--color-text);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }
  
  .nav-list a:hover {
    color: var(--color-accent);
  }

  /* Contact Phone (Right side) */
  .header-contact {
    display: flex;
    align-items: center;
  }

  .phone-link {
    font-family: var(--font-body);
    font-weight: 600;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
  }

  .phone-link .icon {
    font-size: 1.1rem;
  }

  .phone-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 900px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
    }
    .nav-list {
      gap: 1rem;
      font-size: 0.85rem;
    }
  }
</style>
