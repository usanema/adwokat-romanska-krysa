---
import Card from './Card.astro';

interface Props {
  name: string;
  title: string;
  image?: string;
  href?: string;
}

const { name, title, image = '/assets/images/team/placeholder.jpg', href } = Astro.props;
---

<Card variant="hover" padding="md" class="text-center">
  <!-- Image -->
  <div class="mb-4 overflow-hidden rounded-xl">
    {image ? (
      <img
        src={image}
        alt={name}
        class="w-full h-64 object-cover filter grayscale hover:grayscale-0 transition-all duration-300"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
        <span class="text-6xl text-gray-400 font-heading">
          {name.charAt(0)}
        </span>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="space-y-2">
    <h3 class="text-xl font-semibold text-gray-950">
      {name}
    </h3>
    <p class="text-gray-600 text-sm">
      {title}
    </p>
  </div>

  <!-- Link to full profile -->
  {href && (
    <a
      href={href}
      class="inline-flex items-center mt-4 text-burgundy text-sm font-medium hover:underline"
    >
      Zobacz profil
    </a>
  )}
</Card>
