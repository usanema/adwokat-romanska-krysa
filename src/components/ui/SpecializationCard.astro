---
import Card from './Card.astro';
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="group block">
  <Card variant="hover" padding="lg">
    <div class="flex flex-col items-start space-y-4">
      <!-- Icon -->
      <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-burgundy-light text-burgundy group-hover:bg-burgundy group-hover:text-white transition-colors duration-200">
        <Icon name={icon} size="lg" />
      </div>

      <!-- Content -->
      <div class="flex-1">
        <h3 class="text-xl font-semibold text-gray-950 mb-2 group-hover:text-burgundy transition-colors">
          {title}
        </h3>
        <p class="text-gray-600 leading-relaxed mb-4">
          {description}
        </p>
      </div>

      <!-- Link -->
      <div class="flex items-center text-burgundy font-medium text-sm group-hover:translate-x-1 transition-transform">
        <span>Dowiedz się więcej</span>
        <Icon name="arrow" size="sm" class="ml-2" />
      </div>
    </div>
  </Card>
</a>
