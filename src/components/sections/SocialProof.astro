---
import Card from '@components/ui/Card.astro';
import testimonials from '@data/testimonials.json';
---

<section class="section bg-gray-50">
  <div class="container mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="caption text-burgundy mb-3">Opinie klientów</p>
      <h2 class="text-4xl md:text-5xl font-heading font-semibold text-gray-950 mb-4">
        Zaufali nam
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Zobacz, co mówią o nas nasi klienci
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {testimonials.slice(0, 4).map((testimonial) => (
        <Card variant="default" padding="lg">
          <!-- Stars -->
          <div class="flex mb-4">
            {Array.from({ length: testimonial.rating }).map(() => (
              <svg class="w-5 h-5 text-burgundy" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-gray-700 leading-relaxed mb-6 italic">
            "{testimonial.content}"
          </blockquote>

          <!-- Author -->
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-burgundy-light text-burgundy flex items-center justify-center font-heading font-semibold text-lg mr-4">
              {testimonial.author.charAt(0)}
            </div>
            <div>
              <div class="font-semibold text-gray-950">{testimonial.author}</div>
              <div class="text-sm text-gray-600">{testimonial.role}</div>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>
