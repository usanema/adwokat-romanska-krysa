---
import Button from '@components/ui/Button.astro';
---

<section class="section bg-burgundy text-white">
  <div class="container mx-auto">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-heading font-semibold mb-6">
        Potrzebujesz pomocy prawnej?
      </h2>
      <p class="text-xl text-white/90 mb-8 leading-relaxed">
        Skontaktuj się z nami już dziś. Pierwsza konsultacja jest bezpłatna.
      </p>

      <!-- Contact Info Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <!-- Phone -->
        <a
          href="tel:+48123456789"
          class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/20 transition-colors"
        >
          <svg class="w-8 h-8 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div class="font-semibold mb-1">Zadzwoń</div>
          <div class="text-white/80 text-sm">+48 123 456 789</div>
        </a>

        <!-- Email -->
        <a
          href="mailto:kontakt@adwokat-rk.pl"
          class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/20 transition-colors"
        >
          <svg class="w-8 h-8 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <div class="font-semibold mb-1">Napisz</div>
          <div class="text-white/80 text-sm">kontakt@adwokat-rk.pl</div>
        </a>

        <!-- Visit -->
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
          <svg class="w-8 h-8 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <div class="font-semibold mb-1">Odwiedź</div>
          <div class="text-white/80 text-sm">ul. Przykładowa 1, Warszawa</div>
        </div>
      </div>

      <!-- Main CTA Button -->
      <div class="flex justify-center">
        <a
          href="/kontakt"
          class="inline-flex items-center px-8 py-4 bg-white text-burgundy text-lg font-semibold rounded-lg hover:bg-gray-50 transition-all duration-150 hover:shadow-lg hover:-translate-y-0.5"
        >
          Umów bezpłatną konsultację
        </a>
      </div>
    </div>
  </div>
</section>
