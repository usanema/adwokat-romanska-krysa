---
import Header from "../components/Header";
import Footer from "../components/Footer";
import "../styles/global.css";

interface Props {
    title: string;
    activeTab?: string;
}

const { title, activeTab } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Kancelaria Adwokacka Anna RomaÅ„ska-Krysa. Prawo medyczne, cywilne i rodzinne."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <!-- DM Sans for Display, Inter for Body -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@300;400;500;600&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body class="font-sans antialiased selection:bg-ochre selection:text-cream">
        <Header client:load activeTab={activeTab} />
        <main class="min-h-screen pt-[80px]">
            <!-- pt matching header height -->
            <slot />
        </main>
        <Footer />

        <script>
            import Lenis from "lenis";
            import SplitType from "split-type";
            import { gsap } from "gsap";
            import { ScrollTrigger } from "gsap/ScrollTrigger";

            gsap.registerPlugin(ScrollTrigger);

            // 1. Initialize Lenis (Smooth Scroll)
            const lenis = new Lenis({
                duration: 1.2,
                easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
                orientation: "vertical",
                gestureOrientation: "vertical",
                smoothWheel: true,
            });

            function raf(time) {
                lenis.raf(time);
                requestAnimationFrame(raf);
            }

            requestAnimationFrame(raf);

            // Connect Lenis to ScrollTrigger
            lenis.on("scroll", ScrollTrigger.update);
            gsap.ticker.add((time) => {
                lenis.raf(time * 1000);
            });
            gsap.ticker.lagSmoothing(0);

            // 2. Initialize Text Animations
            const initTextAnimations = async () => {
                // Wait for fonts to ensure correct splitting
                await document.fonts.ready;

                // SELECTORS
                const splitTargets = document.querySelectorAll(
                    '[data-animate="split"]'
                );
                const fadeTargets = document.querySelectorAll(
                    '[data-animate="fade"]'
                );

                // A. HANDLE SPLIT TEXT
                splitTargets.forEach((target) => {
                    const element = target as HTMLElement;

                    // 1. Split the text
                    const type =
                        element.getAttribute("data-split-type") || "words";
                    const split = new SplitType(element, {
                        types: "lines, words, chars",
                        tagName: "span",
                    });

                    // 2. Add class to indicate splitting is done (for CSS safety)
                    element.classList.add("is-splitting");

                    // 3. Set Initial State with GSAP immediately to prevent flash
                    const animTargets =
                        type === "chars" ? split.chars : split.words;
                    gsap.set(animTargets, { y: "100%", opacity: 0 });

                    // 4. Animate on Scroll
                    ScrollTrigger.create({
                        trigger: element,
                        start: "top 85%", // Trigger when top of element hits 85% of viewport
                        onEnter: () => {
                            gsap.to(animTargets, {
                                y: "0%",
                                opacity: 1,
                                duration: 1,
                                ease: "power4.out",
                                stagger: type === "chars" ? 0.02 : 0.05,
                            });
                        },
                        once: true, // Animate only once
                    });
                });

                // B. HANDLE SIMPLE FADE ELEMENTS
                fadeTargets.forEach((el) => {
                    el.classList.add("reveal-fade");

                    ScrollTrigger.create({
                        trigger: el,
                        start: "top 90%",
                        onEnter: () => {
                            el.classList.add("in-view");
                        },
                        once: true,
                    });
                });
            };

            // Run on load
            initTextAnimations();

            // Support View Transitions if added later
            document.addEventListener("astro:page-load", () => {
                // Clean up old ScrollTriggers if needed
                ScrollTrigger.getAll().forEach((t) => t.kill());
                initTextAnimations();
            });
        </script>
    </body>
</html>
