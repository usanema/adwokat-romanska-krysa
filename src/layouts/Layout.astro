---
import Header from "../components/Header";
import Footer from "../components/Footer";
import "../styles/global.css";

interface Props {
    title: string;
    activeTab?: string;
}

const { title, activeTab } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Kancelaria Adwokacka Anna RomaÅ„ska-Krysa. Prawo medyczne, cywilne i rodzinne."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <!-- DM Sans for Display, Inter for Body -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@300;400;500;600&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body class="font-sans antialiased selection:bg-ochre selection:text-cream">
        <Header client:load activeTab={activeTab} />
        <main class="min-h-screen pt-[80px]">
            <!-- pt matching header height -->
            <slot />
        </main>
        <Footer />
    </body>
</html>
