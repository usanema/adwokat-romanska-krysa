---
import Header from "../components/Header";
import Footer from "../components/Footer";
import "../styles/global.css";

interface Props {
    title: string;
    activeTab?: string;
}

const { title, activeTab } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Kancelaria Adwokacka Anna RomaÅ„ska-Krysa. Prawo medyczne, cywilne i rodzinne."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <!-- DM Sans for Display, Inter for Body -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@300;400;500;600&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body
        class="font-sans antialiased selection:bg-primary selection:text-cream"
    >
        <Header client:load activeTab={activeTab} />
        <main class="min-h-screen pt-[80px]">
            <!-- pt matching header height -->
            <slot />
        </main>
        <Footer />

        <script>
            import Lenis from "lenis";

            // 1. Initialize Lenis (Smooth Scroll)
            const lenis = new Lenis({
                duration: 1.2,
                easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
                orientation: "vertical",
                gestureOrientation: "vertical",
                smoothWheel: true,
            });

            function raf(time) {
                lenis.raf(time);
                requestAnimationFrame(raf);
            }

            requestAnimationFrame(raf);

            // 2. Simple Intersection Observer for Fade In
            const observerOptions = {
                root: null,
                rootMargin: "0px",
                threshold: 0.1, // Trigger when 10% of element is visible
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("is-visible");
                        observer.unobserve(entry.target); // Run once
                    }
                });
            }, observerOptions);

            const initAnimations = () => {
                const targets = document.querySelectorAll(".animate-on-scroll");
                targets.forEach((target) => observer.observe(target));
            };

            // Run on load
            initAnimations();

            // Re-run on view transitions support (future proofing)
            document.addEventListener("astro:page-load", initAnimations);
        </script>
    </body>
</html>
